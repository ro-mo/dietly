<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold mb-6">Nuovo appuntamento</h1>

    <%= form_with(model: @appointment, class: "space-y-6") do |f| %>
      <% if @appointment.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <h2 class="font-bold"><%= pluralize(@appointment.errors.count, "errore") %> da correggere:</h2>
          <ul class="list-disc list-inside">
            <% @appointment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :doctor_id, "Seleziona il dottore", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.collection_select :doctor_id, @doctors, :id, :full_name, 
            { prompt: "Seleziona un dottore" }, 
            class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md" %>
      </div>

      <div class="form-group">
        <%= f.label :start_time, "Data e ora di inizio", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.datetime_local_field :start_time, 
            class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md" %>
        <p class="mt-1 text-sm text-gray-500">L'appuntamento durerÃ  20 minuti</p>
      </div>

      <div class="form-group">
        <%= f.label :notes, "Note", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :notes, 
            class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md",
            rows: 4 %>
      </div>

      <div class="flex justify-end space-x-4">
        <%= link_to 'Annulla', appointments_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= f.submit "Prenota appuntamento", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div> 