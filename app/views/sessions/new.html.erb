<section class="bg-gradient-to-br from-white to-marmorean-50 dark:from-gray-900 dark:to-gray-800 min-h-screen">
  <div class="flex flex-col items-center justify-center px-6 py-12 mx-auto min-h-screen lg:py-6">
  
    <a href="<%= root_path %>" class="flex items-center mb-8 text-5xl font-bold text-marmorean-600 dark:text-marmorean-400 relative z-10">
      <div class="w-12 h-12 mr-3 rounded-full bg-gradient-to-r from-marmorean-400 to-marmorean-600 flex items-center justify-center shadow-lg">
        <img class="w-8 h-8" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg" alt="logo">
      </div>
      Dietly
    </a>
    
    <div class="w-full bg-white rounded-2xl shadow-xl dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-marmorean-700 relative overflow-hidden">
      <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-bl from-marmorean-200 to-transparent opacity-20 rounded-bl-full"></div>
      <div class="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-tr from-marmorean-200 to-transparent opacity-20 rounded-tr-full"></div>
      
      <div class="p-8 space-y-5 md:space-y-7 relative z-10">
        <h1 class="text-2xl text-center font-bold leading-tight tracking-tight text-gray-900 md:text-3xl dark:text-white">
          Benvenuto
          <span class="block text-lg text-marmorean-600 dark:text-marmorean-400 mt-1 font-normal">Accedi al tuo account</span>
        </h1>
        
        <% flash.each do |type, message| %>
        <div class="rounded-xl bg-<%= type == 'alert' ? 'red' : 'marmorean' %>-50 p-4 mb-4 border border-<%= type == 'alert' ? 'red' : 'marmorean' %>-100 dark:bg-<%= type == 'alert' ? 'red' : 'marmorean' %>-900/20 dark:border-<%= type == 'alert' ? 'red' : 'marmorean' %>-800">
          <div class="flex">
            <div class="flex-shrink-0">
              <% if type == 'alert' %>
                <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              <% else %>
                <svg class="h-5 w-5 text-marmorean-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              <% end %>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-<%= type == 'alert' ? 'red' : 'marmorean' %>-700 dark:text-<%= type == 'alert' ? 'red' : 'marmorean' %>-300"><%= message %></h3>
            </div>
          </div>
        </div>
        <% end %>
        
        <%= form_with url: session_url, class: "space-y-5 md:space-y-6" do |form| %>
        <div>
          <%= form.label :email_address, class: "block mb-2 text-sm font-medium text-gray-700 dark:text-marmorean-100" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <svg class="w-5 h-5 text-marmorean-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
              </svg>
            </div>
            <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "nome@esempio.com", value: params[:email_address], class: "bg-white border border-marmorean-300 text-gray-900 rounded-lg focus:ring-marmorean-500 focus:border-marmorean-500 block w-full pl-10 p-3 dark:bg-gray-700 dark:border-marmorean-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-marmorean-500 dark:focus:border-marmorean-500" %>
          </div>
        </div>
        
        <div>
          <%= form.label :password, class: "block mb-2 text-sm font-medium text-gray-700 dark:text-marmorean-100" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <svg class="w-5 h-5 text-marmorean-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "••••••••", maxlength: 72, class: "bg-white border border-marmorean-300 text-gray-900 rounded-lg focus:ring-marmorean-500 focus:border-marmorean-500 block w-full pl-10 p-3 dark:bg-gray-700 dark:border-marmorean-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-marmorean-500 dark:focus:border-marmorean-500" %>
          </div>
        </div>
        
        <div class="relative w-full">
          <%= form.button type: "submit", class: "w-full text-white bg-marmorean-500 hover:bg-marmorean-600 focus:ring-4 focus:outline-none focus:ring-marmorean-300 font-medium rounded-lg text-sm px-5 py-3 text-center shadow-md transition-colors duration-300 ease-in-out dark:bg-marmorean-600 dark:hover:bg-marmorean-700 dark:focus:ring-marmorean-800" do %>
            Accedi
          <% end %>
        </div>
        
        <p class="text-sm font-medium text-center text-marmorean-600 hover:underline dark:text-marmorean-400">
          <%= link_to "Password dimenticata?", new_password_path, class: "hover:text-marmorean-800 dark:hover:text-marmorean-300 transition-colors duration-200" %>
        </p>
        <% end %>
        
        <div class="relative flex items-center py-2">
          <div class="flex-grow border-t border-gray-200 dark:border-gray-700"></div>
          <span class="flex-shrink mx-4 text-sm text-gray-400">oppure</span>
          <div class="flex-grow border-t border-gray-200 dark:border-gray-700"></div>
        </div>
        
        <div class="grid gap-4 grid-cols-1 sm:grid-cols-2">
          <%= link_to patients_signup_path, class: "flex items-center justify-center w-full text-white bg-marmorean-500 hover:bg-marmorean-600 focus:ring-4 focus:outline-none focus:ring-marmorean-300 font-medium rounded-lg text-sm px-5 py-3 text-center shadow-md transition-colors duration-300 ease-in-out hover:shadow-lg dark:bg-marmorean-600 dark:hover:bg-marmorean-700 dark:focus:ring-marmorean-800" do %>
            <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Registrati come paziente
          <% end %>
          
          <%= link_to doctors_signup_path, class: "flex items-center justify-center w-full text-white bg-marmorean-500 hover:bg-marmorean-600 focus:ring-4 focus:outline-none focus:ring-marmorean-300 font-medium rounded-lg text-sm px-5 py-3 text-center shadow-md transition-colors duration-300 ease-in-out hover:shadow-lg dark:bg-marmorean-600 dark:hover:bg-marmorean-700 dark:focus:ring-marmorean-800" do %>
            <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
            </svg>
            Registrati come medico
          <% end %>
        </div>
      </div>
    </div>
    
    <p class="mt-8 text-center text-xs text-gray-500 dark:text-gray-400">
      &copy; <%= Date.today.year %> Dietly. Tutti i diritti riservati.
    </p>
  </div>
</section>