<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Gestione Appuntamenti</h1>
    <div class="flex space-x-4">
      <%= link_to 'Torna alla home', root_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      <% if Current.user.is_a?(Doctor) %>
        <%# Usa il path helper corretto per nuovo appuntamento %>
        <%= link_to 'Nuovo appuntamento', new_doctors_appointment_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <% end %>
    </div>
  </div>

  <% if @appointments.any? %>
    <div class="grid gap-4">
      <% @appointments.each do |appointment| %>
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex flex-col sm:flex-row justify-between items-start">
            <div class="mb-4 sm:mb-0">
              <h2 class="text-xl font-semibold mb-2">
                Appuntamento con <%= appointment.patient.full_name %>
              </h2>
              <p class="text-gray-600">
                <%# Aggiungo .to_date per formattare solo la data %>
                Data: <%= l appointment.start_time.to_date, format: :long if appointment.start_time %>
              </p>
              <p class="text-gray-600">
                Orario: <%= l appointment.start_time, format: :time if appointment.start_time %> - <%= l appointment.end_time, format: :time if appointment.end_time %>
              </p>
            </div>
            <% if Current.user.is_a?(Doctor) %>
              <div class="flex flex-wrap space-x-0 sm:space-x-2 space-y-2 sm:space-y-0">
                <%# Usa i path helper corretti per le azioni %>
                <%= link_to 'Visualizza', doctors_appointment_path(appointment), class: "text-blue-500 hover:text-blue-700 px-2 py-1" %>
                <%= link_to 'Modifica', edit_doctors_appointment_path(appointment), class: "text-yellow-500 hover:text-yellow-700 px-2 py-1" %>
                <%= button_to 'Cancella', doctors_appointment_path(appointment), method: :delete, class: "text-red-500 hover:text-red-700 px-2 py-1 bg-transparent border-none", data: { confirm: 'Sei sicuro di voler cancellare questo appuntamento?' } %>
              </div>
            <% end %>
          </div>
          <% if appointment.notes.present? %>
            <div class="mt-4 pt-4 border-t border-gray-200">
              <h3 class="text-lg font-medium text-gray-900">Note:</h3>
              <p class="mt-1 text-sm text-gray-600 whitespace-pre-wrap"><%= appointment.notes %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-8">
      <p class="text-gray-600">Non ci sono appuntamenti.</p>
    </div>
  <% end %>
</div> 