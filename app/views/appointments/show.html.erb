<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex justify-between items-start mb-6">
        <h1 class="text-2xl font-bold">Dettagli appuntamento</h1>
        <div class="flex space-x-2">
          <%= link_to 'Torna alla lista', appointments_path, class: "text-blue-500 hover:text-blue-700" %>
          <% if @appointment.status == 'pending' %>
            <%= link_to 'Modifica', edit_appointment_path(@appointment), class: "text-yellow-500 hover:text-yellow-700" %>
          <% end %>
        </div>
      </div>

      <div class="space-y-4">
        <div>
          <h2 class="text-lg font-semibold text-gray-700">Dottore</h2>
          <p class="text-gray-600"><%= @appointment.doctor.full_name %></p>
        </div>

        <div>
          <h2 class="text-lg font-semibold text-gray-700">Paziente</h2>
          <p class="text-gray-600"><%= @appointment.patient.full_name %></p>
        </div>

        <div>
          <h2 class="text-lg font-semibold text-gray-700">Data e ora</h2>
          <p class="text-gray-600">
            <%= l @appointment.start_time, format: :long %>
            (<%= l @appointment.start_time, format: :time %> - <%= l @appointment.end_time, format: :time %>)
          </p>
        </div>

        <div>
          <h2 class="text-lg font-semibold text-gray-700">Stato</h2>
          <p class="<%= status_color(@appointment.status) %>"><%= @appointment.status %></p>
        </div>

        <% if @appointment.notes.present? %>
          <div>
            <h2 class="text-lg font-semibold text-gray-700">Note</h2>
            <p class="text-gray-600"><%= @appointment.notes %></p>
          </div>
        <% end %>
      </div>

      <% if @appointment.status == 'pending' %>
        <div class="mt-6 pt-6 border-t border-gray-200">
          <%= button_to 'Cancella appuntamento', appointment_path(@appointment), 
              method: :delete, 
              class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded",
              data: { confirm: 'Sei sicuro di voler cancellare questo appuntamento?' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>