<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">I miei Appuntamenti</h1>
    <%= link_to 'Torna alla home', root_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if @appointments.any? %>
    <div class="grid gap-4">
      <% @appointments.each do |appointment| %>
        <div class="bg-white shadow rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-2">
            Appuntamento con Dr. <%= appointment.doctor.full_name %>
          </h2>
          <p class="text-gray-600">
            Data: <%= l appointment.start_time.to_date, format: :long if appointment.start_time %>
          </p>
          <p class="text-gray-600">
            Orario: <%= l appointment.start_time, format: :time if appointment.start_time %> - <%= l appointment.end_time, format: :time if appointment.end_time %>
          </p>
          <% if appointment.notes.present? %>
            <div class="mt-4 pt-4 border-t border-gray-200">
              <h3 class="text-lg font-medium text-gray-900">Note del dottore:</h3>
              <p class="mt-1 text-sm text-gray-600"><%= appointment.notes %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-8">
      <p class="text-gray-600">Non hai ancora nessun appuntamento.</p>
    </div>
  <% end %>
</div> 