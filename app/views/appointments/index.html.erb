<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">I tuoi appuntamenti</h1>
    <div class="flex space-x-4">
      <%= link_to 'Torna alla home', root_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      <% if Current.user.is_a?(Patient) %>
        <%= link_to 'Nuovo appuntamento', new_appointment_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <% end %>
    </div>
  </div>

  <% if @appointments.any? %>
    <div class="grid gap-4">
      <% @appointments.each do |appointment| %>
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex justify-between items-start">
            <div>
              <h2 class="text-xl font-semibold mb-2">
                Appuntamento con <%= appointment.doctor.full_name %>
              </h2>
              <p class="text-gray-600">
                Data: <%= l appointment.start_time, format: :long %>
              </p>
              <p class="text-gray-600">
                Orario: <%= l appointment.start_time, format: :time %> - <%= l appointment.end_time, format: :time %>
              </p>
              <p class="text-gray-600">
                Stato: <span class="<%= status_color(appointment.status) %>"><%= appointment.status %></span>
              </p>
            </div>
            <div class="flex space-x-2">
              <%= link_to 'Visualizza', appointment_path(appointment), class: "text-blue-500 hover:text-blue-700" %>
              <% if appointment.status == 'pending' %>
                <%= link_to 'Modifica', edit_appointment_path(appointment), class: "text-yellow-500 hover:text-yellow-700" %>
                <%= button_to 'Cancella', appointment_path(appointment), method: :delete, class: "text-red-500 hover:text-red-700", data: { confirm: 'Sei sicuro di voler cancellare questo appuntamento?' } %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-8">
      <p class="text-gray-600">Non hai ancora nessun appuntamento.</p>
    </div>
  <% end %>
</div> 