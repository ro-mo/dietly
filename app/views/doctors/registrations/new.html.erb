<section class="bg-gradient-to-br from-white to-marmorean-50 dark:from-gray-900 dark:to-gray-800 min-h-screen">
  <div class="flex flex-col items-center justify-center px-6 py-12 mx-auto min-h-screen lg:py-6">
    
    <a href="<%= root_path %>" class="flex items-center mb-8 text-5xl font-bold text-marmorean-600 dark:text-marmorean-400 relative z-10">
      <div class="w-12 h-12 mr-3 rounded-full bg-gradient-to-r from-marmorean-400 to-marmorean-600 flex items-center justify-center shadow-lg">
        <img class="w-8 h-8" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg" alt="logo">
      </div>
      Dietly
    </a>
    
    <div class="w-full bg-white rounded-2xl shadow-xl dark:border md:mt-0 sm:max-w-2xl xl:p-0 dark:bg-gray-800 dark:border-marmorean-700 relative overflow-hidden">
      <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-bl from-marmorean-200 to-transparent opacity-20 rounded-bl-full"></div>
      <div class="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-tr from-marmorean-200 to-transparent opacity-20 rounded-tr-full"></div>
      
      <div class="p-8 space-y-5 md:space-y-7 relative z-10">
        <h1 class="text-2xl text-center font-bold leading-tight tracking-tight text-gray-900 md:text-3xl dark:text-white">
          Registrazione Medico
          <span class="block text-lg text-marmorean-600 dark:text-marmorean-400 mt-1 font-normal">Crea il tuo account professionale</span>
        </h1>
        
        <% if @doctor.errors.any? %>
          <div class="rounded-xl bg-red-50 p-4 mb-4 border border-red-100 dark:bg-red-900 dark:border-red-800">
            <h2 class="text-red-700 text-sm font-medium dark:text-red-300"><%= pluralize(@doctor.errors.count, "errore") %> nella registrazione:</h2>
            <ul class="mt-2 list-disc list-inside text-sm">
              <% @doctor.errors.full_messages.each do |msg| %>
                <li class="text-red-600 dark:text-red-300"><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <%= form_with(model: @doctor, url: doctors_signup_path, class: "space-y-5") do |f| %>
          <div class="grid grid-cols-1 gap-y-5 gap-x-4 sm:grid-cols-2">
            <div>
              <%= f.label :first_name, "Nome", class: "block mb-2 text-sm font-medium text-gray-700 dark:text-marmorean-100" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                  <svg class="w-5 h-5 text-marmorean-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
                <%= f.text_field :first_name, required: true, placeholder: "Inserisci il tuo nome", class: "bg-white border border-marmorean-300 text-gray-900 rounded-lg focus:ring-marmorean-500 focus:border-marmorean-500 block w-full pl-10 p-3 dark:bg-gray-700 dark:border-marmorean-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-marmorean-500 dark:focus:border-marmorean-500" %>
              </div>
            </div>
            
            <div>
              <%= f.label :last_name, "Cognome", class: "block mb-2 text-sm font-medium text-gray-700 dark:text-marmorean-100" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                  <svg class="w-5 h-5 text-marmorean-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
                <%= f.text_field :last_name, required: true, placeholder: "Inserisci il tuo cognome", class: "bg-white border border-marmorean-300 text-gray-900 rounded-lg focus:ring-marmorean-500 focus:border-marmorean-500 block w-full pl-10 p-3 dark:bg-gray-700 dark:border-marmorean-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-marmorean-500 dark:focus:border-marmorean-500" %>
              </div>
            </div>
            
            <div>
              <%= f.label :email_address, "Email", class: "block mb-2 text-sm font-medium text-gray-700 dark:text-marmorean-100" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                  <svg class="w-5 h-5 text-marmorean-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                  </svg>
                </div>
                <%= f.email_field :email_address, required: true, autocomplete: "email", placeholder: "nome@esempio.com", class: "bg-white border border-marmorean-300 text-gray-900 rounded-lg focus:ring-marmorean-500 focus:border-marmorean-500 block w-full pl-10 p-3 dark:bg-gray-700 dark:border-marmorean-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-marmorean-500 dark:focus:border-marmorean-500" %>
              </div>
            </div>
            
            <div>
              <%= f.label :phone, "Telefono", class: "block mb-2 text-sm font-medium text-gray-700 dark:text-marmorean-100" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                  <svg class="w-5 h-5 text-marmorean-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <%= f.telephone_field :phone, required: true, placeholder: "Inserisci il tuo numero di telefono", class: "bg-white border border-marmorean-300 text-gray-900 rounded-lg focus:ring-marmorean-500 focus:border-marmorean-500 block w-full pl-10 p-3 dark:bg-gray-700 dark:border-marmorean-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-marmorean-500 dark:focus:border-marmorean-500" %>
              </div>
            </div>
            
            <div>
              <%= f.label :password, "Password", class: "block mb-2 text-sm font-medium text-gray-700 dark:text-marmorean-100" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                  <svg class="w-5 h-5 text-marmorean-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
                </div>
                <%= f.password_field :password, required: true, placeholder: "••••••••", class: "bg-white border border-marmorean-300 text-gray-900 rounded-lg focus:ring-marmorean-500 focus:border-marmorean-500 block w-full pl-10 p-3 dark:bg-gray-700 dark:border-marmorean-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-marmorean-500 dark:focus:border-marmorean-500" %>
              </div>
            </div>
            
            <div>
              <%= f.label :password_confirmation, "Conferma Password", class: "block mb-2 text-sm font-medium text-gray-700 dark:text-marmorean-100" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                  <svg class="w-5 h-5 text-marmorean-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
                </div>
                <%= f.password_field :password_confirmation, required: true, placeholder: "••••••••", class: "bg-white border border-marmorean-300 text-gray-900 rounded-lg focus:ring-marmorean-500 focus:border-marmorean-500 block w-full pl-10 p-3 dark:bg-gray-700 dark:border-marmorean-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-marmorean-500 dark:focus:border-marmorean-500" %>
              </div>
            </div>
          </div>
          
          <%= f.submit "Registrati", class: "w-full text-white bg-gradient-to-r from-marmorean-500 to-marmorean-600 hover:from-marmorean-600 hover:to-marmorean-700 focus:ring-4 focus:outline-none focus:ring-marmorean-300 font-medium rounded-lg text-sm px-5 py-3 text-center transition-all duration-300 shadow-md hover:shadow-lg mt-6 dark:from-marmorean-600 dark:to-marmorean-700 dark:hover:from-marmorean-700 dark:hover:to-marmorean-800 dark:focus:ring-marmorean-800" %>
        <% end %>
        
        <div class="text-center">
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Hai già un account?
            <%= link_to "Accedi", new_session_path, class: "font-medium text-marmorean-600 hover:text-marmorean-800 dark:text-marmorean-400 dark:hover:text-marmorean-300 transition-colors duration-200" %>
          </p>
        </div>
      </div>
    </div>
    
    <p class="mt-8 text-center text-xs text-gray-500 dark:text-gray-400">
      &copy; <%= Date.today.year %> Dietly. Tutti i diritti riservati.
    </p>
  </div>
</section>