<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex justify-between items-start mb-6">
        <h1 class="text-2xl font-bold">Dettagli appuntamento</h1>
        <div class="flex space-x-2">
          <%# Usa il path corretto per tornare alla lista del dottore %>
          <%= link_to 'Torna alla lista', doctors_appointments_path, class: "text-blue-500 hover:text-blue-700" %>
          <%# Solo i dottori possono modificare %>
          <% if Current.user.is_a?(Doctor) %> 
            <%= link_to 'Modifica', edit_doctors_appointment_path(@appointment), class: "text-yellow-500 hover:text-yellow-700" %>
          <% end %>
        </div>
      </div>

      <div class="space-y-4">
        <div>
          <h2 class="text-lg font-semibold text-gray-700">Dottore</h2>
          <%# Il dottore Ã¨ sempre l'utente corrente in questo contesto %>
          <p class="text-gray-600"><%= @appointment.doctor.full_name %></p> 
        </div>

        <div>
          <h2 class="text-lg font-semibold text-gray-700">Paziente</h2>
          <p class="text-gray-600"><%= @appointment.patient.full_name %></p>
        </div>

        <div>
          <h2 class="text-lg font-semibold text-gray-700">Data e ora</h2>
          <p class="text-gray-600">
            <%# Aggiungo .to_date per formattare solo la data %>
            <%= l @appointment.start_time.to_date, format: :long if @appointment.start_time %>
            (<%= l @appointment.start_time, format: :time if @appointment.start_time %> - <%= l @appointment.end_time, format: :time if @appointment.end_time %>)
          </p>
        </div>

        <% if @appointment.notes.present? %>
          <div>
            <h2 class="text-lg font-semibold text-gray-700">Note</h2>
            <p class="text-gray-600"><%= @appointment.notes %></p>
          </div>
        <% end %>
      </div>

      <%# Solo i dottori possono cancellare %>
      <% if Current.user.is_a?(Doctor) %>
        <div class="mt-6 pt-6 border-t border-gray-200">
          <%= button_to 'Cancella appuntamento', doctors_appointment_path(@appointment), 
              method: :delete, 
              class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded",
              data: { confirm: 'Sei sicuro di voler cancellare questo appuntamento?' } %>
        </div>
      <% end %>
    </div>
  </div>
</div> 